issn = {19994907},
journal = {Forests},
keywords = {Agroforestry,Asia-Pacific region,Ecosystem services,Systematic},
number = {4},
pages = {1--23},
title = {{A systematic map of agroforestry research focusing on ecosystem services in the Asia-Pacific region}},
volume = {11},
year = {2020}
