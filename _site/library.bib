title = {{New Challenges in Agricultural Advisory Services from a Research Perspective: A Literature Review, Synthesis and Research Agenda}},
url = {http://www.tandfonline.com/doi/abs/10.1080/1389224X.2012.707063},
volume = {18},
year = {2012}
