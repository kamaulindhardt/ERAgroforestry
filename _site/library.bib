doi = {10.1016/j.worlddev.2017.05.041},
file = {:Users/kamaulindhardt{\_}1/Library/Application Support/Mendeley Desktop/Downloaded/Bachewe et al. - 2018 - Agricultural Transformation in Africa Assessing the Evidence in Ethiopia(2).pdf:pdf},
