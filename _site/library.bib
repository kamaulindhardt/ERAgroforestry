journal = {Journal of Agricultural Economics},
keywords = {Africa,Nigeria,fertiliser profitability,marginal physical product,political economy,rice},
title = {{Is fertiliser use inconsistent with expected profit maximization in sub-Saharan Africa? “Evidence from Nigeria”}},
year = {2017}
}
