issn = {15729680},
journal = {Agroforestry Systems},
keywords = {Bush mango,Cultivation,Ecological niche modelling,Non-timber forest products},
number = {3},
pages = {937--946},
publisher = {Springer Netherlands},
title = {{Estimation of cultivable areas for Irvingia gabonensis and I. wombolu (Irvingiaceae) in Dahomey-Gap (West Africa)}},
