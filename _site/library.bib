journal = {Computers and Electronics in Agriculture},
keywords = {Citizen science,Data collection,Mobile phone,Smallholder farmers,Unified theory of acceptance and use of technology},
pages = {295--310},
title = {{Exploring farmers' intentions to adopt mobile Short Message Service (SMS) for citizen science in agriculture}},
