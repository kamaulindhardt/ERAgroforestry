issn = {01678809},
journal = {Agriculture, Ecosystems and Environment},
keywords = {Climate change mitigation,Enset-coffee system,Ensete ventricosum,Simulated biomass,South-eastern Ethiopia,Tree-coffee system},
pages = {147--155},
publisher = {Elsevier B.V.},
title = {{Modeling biomass and soil carbon sequestration of indigenous agroforestry systems using CO2FIX approach}},
url = {http://dx.doi.org/10.1016/j.agee.2015.02.004},
volume = {203},
year = {2015}
