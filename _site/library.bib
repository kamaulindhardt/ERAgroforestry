doi = {10.1016/j.gfs.2019.02.001},
issn = {22119124},
journal = {Global Food Security},
keywords = {Cereals,Crop nutrient requirements,Food self-sufficiency,Intensification,Maize,Soil fertility,Sub-saharan Africa,Yield gaps,Zea mays},
