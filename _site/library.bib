number = {September},
pages = {1--46},
title = {{Background Paper the Contribution of Agroecological Approaches To Realizing Climate-}},
url = {https://www.researchgate.net/publication/341406587{\_}The{\_}Contribution{\_}of{\_}Agroecological{\_}Approaches{\_}to{\_}Realizing{\_}Climate-Resilient{\_}Agriculture},
