file = {:Users/kamaulindhardt{\_}1/Library/Application Support/Mendeley Desktop/Downloaded/Yu et al. - 2016 - A meta-analysis of relative crop yields in cereallegume mixtures suggests options for management(2).pdf:pdf},
issn = {03784290},
journal = {Field Crops Research},
keywords = {Agronomic managements,Cereal/legume mixtures,Competition,Meta-analysis,PLER},
pages = {269--279},
publisher = {Elsevier B.V.},
title = {{A meta-analysis of relative crop yields in cereal/legume mixtures suggests options for management}},
url = {http://dx.doi.org/10.1016/j.fcr.2016.08.001},
volume = {198},
year = {2016}
}
